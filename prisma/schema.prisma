generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id                 String   @id @default(cuid())
  name               String
  description        String
  originalPrice      Float
  discountedPrice    Float
  discountPercentage Int
  image              String
  imageAlt           String
  style              String
  tiktokUrl          String?
  featured           Boolean  @default(false)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Review {
  id        String   @id @default(cuid())
  name      String
  rating    Int
  text      String
  date      DateTime @default(now())
  verified  Boolean  @default(false)
  photo     String?
  location  String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Media {
  id        String   @id @default(cuid())
  url       String   @db.Text
  type      String   @default("image")
  name      String?
  createdAt DateTime @default(now())
}

model Order {
  id              String   @id
  customerName    String
  customerEmail   String
  customerPhone   String
  customerAddress String
  customerCity    String?
  products        Json
  subtotal        Float
  shipping        Float
  totalAmount     Float
  status          String   @default("new")
  notes           String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
